#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export CARGO_HOME = $(CURDIR)/debian/cargo

%:
	dh $@

override_dh_auto_build:
	cargo build --release

override_dh_auto_install:
	# Install rigz binary
	install -D -m 755 target/release/rigz debian/rigz/usr/bin/rigz
	# Create unrigz symlink
	ln -sf rigz debian/rigz/usr/bin/unrigz
	
	# For rigz-replace-gzip: create symlinks in /usr/lib/rigz
	mkdir -p debian/rigz-replace-gzip/usr/lib/rigz
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/lib/rigz/gzip
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/lib/rigz/gunzip
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/lib/rigz/gzcat
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/lib/rigz/zcat
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/lib/rigz/uncompress
	
	# Create the actual /usr/bin replacements
	mkdir -p debian/rigz-replace-gzip/usr/bin
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/bin/gzip
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/bin/gunzip
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/bin/gzcat
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/bin/zcat
	ln -sf /usr/bin/rigz debian/rigz-replace-gzip/usr/bin/uncompress

override_dh_auto_test:
	# Skip tests during package build (they require special permissions)
	@echo "Skipping tests during package build"

override_dh_auto_clean:
	cargo clean || true
	rm -rf $(CARGO_HOME)